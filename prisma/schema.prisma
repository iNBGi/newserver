}

model Recipeinformation {
   id             String   @id @default(auto()) @map("_id") @db.ObjectId 
  recipename      String
  ingredients String
  steps String
  nutrition String
}

model Exercises {
   id             String   @id @default(auto()) @map("_id") @db.ObjectId 
